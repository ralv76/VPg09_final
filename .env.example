# API keys and custom URLs (all external APIs via custom URL per ТЗ 2.3, 4.2)
# Do not commit .env — copy this file to .env and fill in values.

# LLM for script generation (optional)
OPENAPI_LLM_URL=
OPENAPI_LLM_API_KEY=
OPENAPI_LLM_MODEL=

# TTS (Text-to-Speech). OPENAPI_TTS_URL — эндпоинт синтеза (напр. .../v1/audio/speech). При ошибке по первому пробуется OPENAPI_TTS_URL2.
OPENAPI_TTS_URL=
OPENAPI_TTS_URL2=
OPENAPI_TTS_API_KEY=
# Модель TTS (для имени файла сэмпла: <модель>_<id>.mp3)
OPENAPI_TTS_MODEL=
# Voice IDs if required by provider (e.g. 2 male + 2 female)
OPENAPI_TTS_VOICES=

# Image generation for cover (proxyapi.ru: dall-e-3, dall-e-2, gpt-image-1, gpt-image-1.5)
OPENAPI_IMAGE_URL=
OPENAPI_IMAGE_API_KEY=
OPENAPI_IMAGE_MODEL=
# Качество: low / medium / high (для gpt-image-1.5 по умолчанию используется low)
OPENAPI_IMAGE_QUALITY=

# App
FLASK_ENV=development
SECRET_KEY=change-me-in-production
DATABASE_URL=sqlite:///data/podcast_gen.db

# Публичный URL для RSS и ссылок на файлы (продакшен). Без завершающего слэша. Пример: https://podcast.example.com
BASE_URL=

# Защита входа (один логин/пароль, без регистрации). По умолчанию: test / test
LOGIN_USERNAME=test
LOGIN_PASSWORD=test

# Limits (ТЗ: budget ≤10$, text limits)
MAX_TEXT_LENGTH=50000
MAX_FILE_SIZE_MB=10
TASK_TIMEOUT_SECONDS=600

# Storage
STORAGE_PATH=./storage
UPLOAD_PATH=./uploads
MUSIC_LIBRARY_PATH=./static/music

# Retention (ТЗ 5.2: 7 days)
FILE_RETENTION_DAYS=7
TASK_METADATA_DAYS=7
LOG_RETENTION_DAYS=30
